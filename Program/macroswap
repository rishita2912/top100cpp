//Write a c++ program to swap 2 numbers using macros
#include <iostream>
using namespace std;

#define SWAP(a, b) { int temp = a; a = b; b = temp; }

int main() {
    int num1, num2;
    cout << "Enter two numbers: ";
    cin >> num1 >> num2;
    cout << "Before swapping: num1 = " << num1 << ", num2 = " << num2 << endl;
    SWAP(num1, num2);
    cout << "After swapping: num1 = " << num1 << ", num2 = " << num2 << endl;

    return 0;
}
