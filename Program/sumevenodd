//Write a c++ program to print the sum of even and odd integers of first n natural numbers
#include<iostream>
using namespace std;
int main()
{
    int n;
    int sumeven = 0, sumodd = 0;
    cout<<"Enter the value of n:";
    cin>>n;
    for(int i = 1;i<=n;i++)
    {
       if(i%2 == 0)
       {
           sumeven+=i;
       }
       else
       {
           sumodd+=i;
       }
    }
    cout<<"The sum of even numbers:"<<sumeven<<endl;
    cout<<"The sum of odd numbers:"<<sumodd;
    return 0;
}
