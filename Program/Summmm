//Write a C++ program to calculate the sum of 1+ x^1 + x^2+ ..... + x^n.

#include <iostream>
#include<conio.h>
#include<math.h>
using namespace std;

int main()
{
    long i,n,x,sum = 1;
    cout<<"1+x^1+x^2+....+x^n";
    cout<<"\nEnter the value of x and n:";
    cin>>x>>n;
    for(i = 1; i<= n; i++)
     sum+=pow(x,i);
     cout<<"\nSum"<<sum;

    return 0;
}
